#:kivy 1.0.9
<BerhitungGame>:
    FloatLayout:
        Image:
            source: 'background.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: None, None
            size: root.width, root.height
            pos: 0, 0

        # Gambar deretan angka
        Image:
            id: num1_image
            size_hint: None, None
            size: 80, 80
            pos_hint: {"center_x": 0.1, "center_y": 0.8}
        Image:
            id: num2_image
            size_hint: None, None
            size: 80, 80
            pos_hint: {"center_x": 0.2, "center_y": 0.8}
        Image:
            id: num3_image
            size_hint: None, None
            size: 80, 80
            pos_hint: {"center_x": 0.3, "center_y": 0.8}
        Image:
            id: num4_image
            size_hint: None, None
            size: 80, 80
            pos_hint: {"center_x": 0.4, "center_y": 0.8}
        Image:
            id: num5_image
            size_hint: None, None
            size: 80, 80
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
        Image:
            id: num6_image
            size_hint: None, None
            size: 80, 80
            pos_hint: {"center_x": 0.6, "center_y": 0.8}
        Image:
            id: num7_image
            size_hint: None, None
            size: 80, 80
            pos_hint: {"center_x": 0.7, "center_y": 0.8}
        Image:
            id: num8_image
            size_hint: None, None
            size: 80, 80
            pos_hint: {"center_x": 0.8, "center_y": 0.8}

        # Input jawaban pemain
        TextInput:
            id: answer1_input
            hint_text: "Isi angka pertama"
            size_hint: None, None
            size: 100, 40
            pos_hint: {"center_x": 0.4, "center_y": 0.5}
        TextInput:
            id: answer2_input
            hint_text: "Isi angka kedua"
            size_hint: None, None
            size: 100, 40
            pos_hint: {"center_x": 0.6, "center_y": 0.5}

        Button:
            text: "Submit"
            size_hint: None, None
            size: 100, 50
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_release: root.check_answer()

        Label:
            id: result
            text: ""
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
